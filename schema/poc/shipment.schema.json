{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "shipment.schema.json",
    "title": "POC shipment",
    "description": "Schema for POC shipment data",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "shipDate": {
            "title": "Ship ID",
            "type": "string"
        },
        "sellerId": {
            "title": "Seller ID",
            "type": "string"
        },
        "buyerId": {
            "title": "Buyer ID",
            "type": "string"
        },
        "productId": {
            "title": "Product ID",
            "type": "string"
        },
        "orderId": {
            "title": "Order ID",
            "type": "string"
        },
        "quantity": {
            "title": "Quantity",
            "type": "number"
        },
        "requestedDate": {
            "title": "Requested Date",
            "type": "string"
        }
    },
    "required": [
        "shipDate",
        "sellerId",
        "buyerId",
        "productId",
        "orderId",
        "quantity",
        "requestedDate"
    ],
    "additionalProperties": false
}