{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "supplier-credential.schema.json",
  "title": "POC supplier credential registration schema",
  "description": "Registering the credentials of a supplier, who may or may not be a direct participant in the network.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "supplierName": {
      "title": "Supplier Name",
      "type": "string"
    },
    "submissionDate": {
      "title": "Submission Date",
      "type": "string"
    },
    "buyerId": {
      "title": "Buyer ID",
      "type": "string"
    },
    "address": {
      "title": "Address",
      "type": "string"
    },
    "country": {
      "title": "Country",
      "type": "string"
    },
    "productsProduced": {
      "title": "Products Produced",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "employees": {
      "title": "Employees",
      "type": "number"
    }
  },
  "required": [
    "supplierName",
    "submissionDate",
    "buyerId",
    "address",
    "country",
    "productsProduced",
    "employees"
  ],
  "additionalProperties": false
}
