{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "product-detail.schema.json",
  "title": "POC product detail",
  "description": "Registering the details of a product",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "productId": {
      "title": "Product ID",
      "type": "string"
    },
    "submissionDate": {
      "title": "Submission Date",
      "type": "string"
    },
    "sellerId": {
      "title": "Seller ID",
      "type": "string"
    },
    "buyerId": {
      "title": "Buyer ID",
      "type": "string"
    },
    "countryOfOrigin": {
      "title": "Country of Origin",
      "type": "string"
    },
    "conflictFreeDeclaration": {
      "title": "Conflict Free Declaration",
      "type": "boolean"
    },
    "compositionByWeight": {
      "title": "Composition by Weight",
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "keyMaterialSupplier": {
      "title": "Key Material Supplier",
      "type": "string"
    },
    "c02emissions": {
      "title": "C02 Emissions",
      "type": "number"
    }
  },
  "required": [
    "productId",
    "submissionDate",
    "sellerId",
    "buyerId",
    "countryOfOrigin",
    "conflictFreeDeclaration",
    "compositionByWeight",
    "keyMaterialSupplier",
    "c02emissions"
  ],
  "additionalProperties": false
}
